{
  "name": "service-worker-webpack",
  "description": "A Webpack Plugin to generate a Service Worker. Powered by Workbox",
  "license": "MIT",
  "author": "Tate <tatethurston@gmail.com>",
  "homepage": "https://github.com/tatethurston/next-service-worker#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tatethurston/next-service-worker.git"
  },
  "bugs": {
    "url": "https://github.com/tatethurston/next-service-worker/issues"
  },
  "version": "0.0.2",
  "main": "dist/index.js",
  "files": [
    "dist/index.d.ts",
    "dist/*.js"
  ],
  "scripts": {
    "build": "yarn clean && yarn tsc",
    "build:watch": "yarn clean && yarn tsc --watch",
    "clean": "rm -rf dist/*",
    "lint:fix": "yarn lint:fix:md && yarn lint:fix:package && yarn lint:fix:ts && prettier --write ./src && yarn typecheck",
    "lint:fix:md": "prettier --write *.md",
    "lint:fix:package": "prettier-package-json --write ./package.json",
    "lint:fix:ts": "eslint --fix './src/**/*.ts{,x}'",
    "test": "yarn build && jest --testTimeout 5000 --rootDir dist",
    "typecheck": "yarn tsc --noEmit",
    "typecheck:watch": "yarn typecheck --watch",
    "version": "yarn run build && git add -A package.json",
    "postversion": "git push && git push --tags"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "copy-webpack-plugin": "^6.4.0",
    "schema-utils": "^3.0.0",
    "workbox-webpack-plugin": "^6.1.5",
    "workbox-window": "^6.1.5"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^6.4.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^13.13.5",
    "@types/workbox-webpack-plugin": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.1",
    "prettier-package-json": "^2.1.3",
    "typescript": "^4.1.3",
    "webpack": "^5.35.0"
  },
  "keywords": [
    "webpack",
    "plugin",
    "offline",
    "pwa",
    "service worker",
    "workbox"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix"
    }
  }
}
